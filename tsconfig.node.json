{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "api/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src"
  ]
}